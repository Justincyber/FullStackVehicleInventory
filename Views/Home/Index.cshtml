﻿@{
    ViewData["Title"] = "Home";
}



<div class="homepage-container">
    <div class="overlay">
        <h1>Welcome to ZML Toyota</h1>
        <p>Explore our inventory and find your perfect ride.</p>
        <a asp-area="" asp-controller="Vehicles" asp-action="Index" class="btn">View Vehicles</a>
    </div>
</div>

<div class="container mt-5 text-center">
    <div class="sectionHead"><h2>Contact Us</h2></div>
    <hr class="section-divider">
    <div class="row">
        <div class="col-md-7">
            <h4>Location</h4>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14366.524877081828!2d-80.11270247301343!3d26.31841021014451!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88d8a398c9db4aaf%3A0x3b9fa44dbecb1f78!2sToyota!5e0!3m2!1sen!2sus!4v1616351338859!5m2!1sen!2sus" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
        <div class="col-md-5">
            <h4>Contact Info</h4>
            <p>Email: support@zmltoyota.com</p>
            <p>Phone: +1 (800) 123-4567</p>
        </div>
    </div>
</div>
<style>
    .homepage-container {
        background-image: url('https://wallpapercave.com/wp/wp2267452.jpg');
        background-size: cover;
        background-position: center;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .overlay {
        background-color: rgba(0, 0, 0, 0.6);
        color: white;
        padding: 0px;
        text-align: center;
        border-radius: 10px;
    }

    h1 {
        font-size: 3rem;
        margin-bottom: 10px;
    }

    p {
        font-size: 1.5rem;
        margin-bottom: 20px;
    }

    .btn {
        padding: 10px 20px;
        background-color: #ff0000;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 1.2rem;
    }

        .btn:hover {
            background-color: #cc0000;
        }
</style>





