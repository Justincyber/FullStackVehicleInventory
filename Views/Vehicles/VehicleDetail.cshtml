@{
    var vehicle = ViewBag.Vehicle as VehicleInventoryProj.Models.Vehicle;
    var color = ViewBag.Color as VehicleInventoryProj.Models.Color;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<!-- Back Arrow below the navbar -->
<a href="/vehicles" class="btn btn-link text-dark back-arrow" aria-label="Back to All Vehicles">
    <i class="fas fa-arrow-left fa-2x"></i>
</a>

<!-- Header Section -->
<div class="header mb-4 text-center">
    <h1 class="display-4"><b>@vehicle.Year @vehicle.Make @vehicle.Model</b></h1>
</div>

<!-- Vehicle Image and Information -->
<div class="row">
    <div class="col-md-6 d-flex justify-content-center align-items-center">
        <img src="@vehicle.ImgPath" class="img-fluid" style="max-width: 80%; height: auto;" alt="@vehicle.Make @vehicle.Model" draggable="false">
    </div>
    <div class="col-md-6">
        <h2>Details</h2>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Make:</strong> @vehicle.Make</li>
            <li class="list-group-item"><strong>Model:</strong> @vehicle.Model</li>
            <li class="list-group-item"><strong>Year:</strong> @vehicle.Year</li>
            <li class="list-group-item"><strong>Fuel Type:</strong> @vehicle.FuelType</li>
            <li class="list-group-item"><strong>Build:</strong> @vehicle.Build</li>
            <li class="list-group-item"><strong>Color:</strong> @(color != null ? color.Name : "Not Specified")</li>
            <li class="list-group-item"><strong>MPG (City):</strong> @vehicle.CityMPG MPG</li>
            <li class="list-group-item"><strong>MPG (Highway):</strong> @vehicle.HwyMPG MPG</li>
            <li class="list-group-item"><strong>MSRP:</strong> @vehicle.MSRP.ToString("C")</li>
            <li class="list-group-item"><strong>In Stock:</strong> @(vehicle.InStock ? "Yes" : "No")</li>

        </ul>
    </div>
</div>


<!-- STYLES -->
<style>
    .back-arrow {
        position: relative;
        top: 20px;
        left: 20px;
        text-decoration: none;
    }

    .back-arrow i {
        color: #666;
        transition: color 0.3s ease;
    }

    .back-arrow:hover i { color: #333; }

    .header { text-align: center; }
</style>